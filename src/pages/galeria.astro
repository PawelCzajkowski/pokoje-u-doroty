---
import MainLayout from "../layouts/MainLayout.astro";

const galleryImages = [
	{ src: "/images/hero.png", alt: "Widok na budynek i jezioro" },
	{ src: "/images/pokoj1.JPG", alt: "Przytulny pokój 1" },
	{ src: "/images/pokoj2.JPG", alt: "Jasny pokój z szafami" },
	{ src: "/images/pokoj3.JPG", alt: "Komfortowy pokój rodzinny" },
];
---

<MainLayout
	title="Galeria - Pokoje u Doroty"
	description="Zobacz galerię zdjęć naszych przytulnych pokoi w Augustowie."
>
	<section class="gallery-wrapper container">
		<div class="section-header text-center">
			<h1>Galeria Zdjęć</h1>
			<p>Poczuj atmosferę naszych wnętrz i pięknej okolicy</p>
		</div>

		<div class="gallery-grid">
			{
				galleryImages.map((img) => (
					<div class="gallery-item">
						<img src={img.src} alt={img.alt} loading="lazy" />
						<div class="overlay">
							<p>{img.alt}</p>
						</div>
					</div>
				))
			}
		</div>
	</section>

	<style>
		.gallery-wrapper {
			padding-top: 6rem;
		}
		.section-header h1 {
			font-size: 3rem;
			color: var(--color-primary);
			margin-bottom: 1rem;
		}
		.gallery-grid {
			display: grid;
			grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
			gap: 1.5rem;
			margin-top: 4rem;
		}
		.gallery-item {
			position: relative;
			height: 300px;
			border-radius: var(--border-radius);
			overflow: hidden;
			box-shadow: var(--shadow);
		}
		.gallery-item img {
			width: 100%;
			height: 100%;
			object-fit: cover;
			transition: var(--transition);
		}
		.gallery-item:hover img {
			transform: scale(1.1);
		}
		.overlay {
			position: absolute;
			bottom: 0;
			left: 0;
			right: 0;
			background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
			padding: 1.5rem;
			color: white;
			opacity: 0;
			transition: var(--transition);
		}
		.gallery-item:hover .overlay {
			opacity: 1;
		}

		@media (max-width: 600px) {
			.gallery-grid {
				grid-template-columns: 1fr;
			}
		}
	</style>
</MainLayout>
