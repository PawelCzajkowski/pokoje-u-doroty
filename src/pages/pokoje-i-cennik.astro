---
import MainLayout from "../layouts/MainLayout.astro";

const roomDetails = [
	{
		title: "Pokój Słoneczny (2-osobowy)",
		price: "od 150 zł / doba",
		description:
			"Idealny dla par szukających spokoju. Z balkonem z widokiem na ogród.",
		amenities: ["Łóżko małżeńskie", "Prywatna łazienka", "TV"],
		image: "/images/pokoj1.JPG",
	},
	{
		title: "Pokój Rodzinny (3-4 osobowy)",
		price: "od 220 zł / doba",
		description:
			"Przestronny pokój dla całej rodziny. Dużo miejsca do zabaw i relaksu.",
		amenities: ["Łóżka pojedyncze i podwójne", "Łazienka", "Balkon"],
		image: "/images/pokoj3.JPG",
	},
	{
		title: "Przystań Spokoju (2-osobowy)",
		price: "od 160 zł / doba",
		description: "Pokój o podwyższonym standardzie z wyjątkowym klimatem.",
		amenities: ["Duże łóżko", "Łazienka", "Balkon"],
		image: "/images/pokoj2.JPG",
	},
];
---

<MainLayout
	title="Pokoje i Cennik - Pokoje u Doroty"
	description="Sprawdź ofertę naszych pokoi i aktualny cennik."
>
	<section class="rooms-page container">
		<div class="section-header text-center">
			<h1>Pokoje i Cennik</h1>
			<p>Oferujemy komfortowe noclegi w konkurencyjnych cenach</p>
		</div>

		<div class="rooms-list">
			{
				roomDetails.map((room, index) => (
					<div
						class={`room-card ${index % 2 === 1 ? "reverse" : ""}`}
					>
						<div class="room-image">
							<img src={room.image} alt={room.title} />
						</div>
						<div class="room-content">
							<h2>{room.title}</h2>
							<p class="price">{room.price}</p>
							<p class="desc">{room.description}</p>
							<ul class="room-amenities">
								{room.amenities.map((amenity) => (
									<li>{amenity}</li>
								))}
							</ul>
							<a href="/kontakt" class="btn">
								Zarezerwuj
							</a>
						</div>
					</div>
				))
			}
		</div>

		<div class="additional-info bg-white">
			<h2>Warte uwagi</h2>
			<div class="info-grid">
				<div class="info-item">
					<h3>Doba hotelowa</h3>
					<p>
						Zaczyna się od godziny 14:00, a kończy o 11:00 dnia
						następnego.
					</p>
				</div>
				<div class="info-item">
					<h3>Zwierzęta</h3>
					<p>
						Akceptujemy małe zwierzęta po wcześniejszym uzgodnieniu
						(dodatkowa opłata).
					</p>
				</div>
				<div class="info-item">
					<h3>Rezerwacja</h3>
					<p>
						Potwierdzeniem rezerwacji jest wpłata zadatku w
						wysokości 30% wartości pobytu.
					</p>
				</div>
			</div>
		</div>
	</section>

	<style>
		.rooms-page {
			padding-top: 6rem;
		}
		.section-header h1 {
			font-size: 3rem;
			color: var(--color-primary);
		}

		.rooms-list {
			display: flex;
			flex-direction: column;
			gap: 6rem;
			margin-top: 4rem;
		}
		.room-card {
			display: grid;
			grid-template-columns: 1fr 1fr;
			gap: 4rem;
			align-items: center;
		}
		.room-card.reverse .room-image {
			order: 2;
		}
		.room-card.reverse .room-content {
			order: 1;
		}

		.room-image {
			height: 400px;
			border-radius: var(--border-radius);
			overflow: hidden;
			box-shadow: var(--shadow);
		}
		.room-image img {
			width: 100%;
			height: 100%;
			object-fit: cover;
		}

		.room-content h2 {
			font-size: 2.2rem;
			color: var(--color-primary);
			margin-bottom: 0.5rem;
		}
		.price {
			font-size: 1.5rem;
			font-weight: 700;
			color: var(--color-accent);
			margin-bottom: 1.5rem;
		}
		.desc {
			margin-bottom: 1.5rem;
			font-size: 1.1rem;
		}

		.room-amenities {
			display: grid;
			grid-template-columns: 1fr 1fr;
			gap: 0.5rem;
			margin-bottom: 2rem;
			list-style: disc;
			padding-left: 1.2rem;
		}

		.additional-info {
			margin-top: 8rem;
			padding: 4rem;
			border-radius: var(--border-radius);
			border: 1px solid rgba(93, 64, 55, 0.1);
		}
		.additional-info h2 {
			text-align: center;
			margin-bottom: 3rem;
			color: var(--color-primary);
		}
		.info-grid {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
			gap: 3rem;
		}
		.info-item h3 {
			margin-bottom: 1rem;
			color: var(--color-secondary);
		}

		@media (max-width: 900px) {
			.room-card {
				grid-template-columns: 1fr;
				gap: 2rem;
			}
			.room-card.reverse .room-image {
				order: 1;
			}
			.room-card.reverse .room-content {
				order: 2;
			}
			.room-image {
				height: 300px;
			}
		}
	</style>
</MainLayout>
